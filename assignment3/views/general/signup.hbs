    <form method="post" action="/signup">
      <div class="texting_field">
        <input type="firstName" id="firstName" name="" value="{{values.firstName}}" required>
        <span></span>
        <label for="firstName">* First name</label>
      </div>

      <div class="texting_field">
        <input type="lname" id="lastName" name="lastName" value="{{values.lastName}}" required>
        <span></span>
        <label for="lastName">* Last name</label>
      </div>

      <div class="texting_field">
        <input type="email" id="email" name="email" value="{{values.email}}" required>
        <span></span>
        <label for="email">* Email Address</label>
      </div>

      <div class="texting_field">
        <input type="password" id="password" name="password" value="{{values.password}}" required>
        <span></span>
        <label for="password">* Password</label>
      </div>

      <input type="submit" value="Sign up today!!">
  </div>


  </form>

  </div>
